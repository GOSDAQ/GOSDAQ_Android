<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:animateLayoutChanges="true"
        android:padding="30dp"
        tools:context=".view.AddActivity">

        <TextView
            android:id="@+id/add_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="어떤 국가의 종목을 \n추가할까요?"
            android:textSize="24sp"
            android:textStyle="bold"
            android:visibility="gone"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_editor_absoluteX="30dp" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="지원 국가는 차츰 확대 될 예정이에요.\nGosdaq은 더 많은 국가를 지원할 수 있도록 노력하고 있어요."
            android:textSize="10sp"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@+id/add_title" />

        <RadioGroup
            android:id="@+id/ticker_country_radio_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@+id/textView">

            <RadioButton
                android:id="@+id/us_radio_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="미국 (US)"
                app:layout_constraintStart_toEndOf="@+id/kr_radio_button"
                app:layout_constraintTop_toBottomOf="@+id/textView" />

            <RadioButton
                android:id="@+id/kr_radio_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="한국 (KR)"
                app:layout_constraintStart_toStartOf="@+id/textView"
                app:layout_constraintTop_toBottomOf="@+id/textView" />

        </RadioGroup>

        <LinearLayout
            android:id="@+id/ticker_area"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:orientation="vertical"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@+id/ticker_country_radio_group">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="종목 코드"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="추가하고자 하는 종목코드를 입력해주세요."
                android:textSize="12sp" />

            <EditText
                android:id="@+id/ticker_edit_text"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:background="@drawable/style_edit_text"
                android:hint="123456"
                android:paddingStart="10dp"
                android:paddingEnd="10dp" />

            <Button
                android:id="@+id/add_ticker_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="추가하기" />

        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>